<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.App.Gangesh.Shubham.CreatingTeam1"
        android:background="@drawable/gradient_12">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/button4"
            android:background="@drawable/gradient_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          android:layout_weight="1"
            android:textColor="#FFF"
            android:text="Submit Your Players" />

            <Button
                android:id="@+id/editTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gradient_2"
                android:padding="3dp"
                android:text="Edit Team"
                android:textColor="#FFF"
                android:textSize="18dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/bats"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:text="Batsmen:"
            android:textColor="#000"
            android:textSize="28dp" />

        <ListView
            android:id="@+id/batList1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp" />

        <TextView
            android:id="@+id/wkts"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/batList1"
            android:layout_marginTop="10dp"
            android:paddingLeft="8dp"
            android:layout_weight="1"
            android:text="WktKeeper:"
            android:textColor="#000"
            android:textSize="28dp" />

        <ListView
            android:id="@+id/wktList1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wkts"
            android:layout_marginTop="10dp" />


        <TextView
            android:id="@+id/alls"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wktList1"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="AllRounders:"
            android:paddingLeft="8dp"
            android:textColor="#000"
            android:textSize="28dp" />

        <ListView
            android:id="@+id/allList1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/alls"
            android:layout_marginTop="10dp" />


        <TextView
            android:id="@+id/bowl"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/allList1"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Bowlers:"
            android:paddingLeft="8dp"
            android:textColor="#000"
            android:textSize="28dp" />

        <ListView
            android:id="@+id/bowlList1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bowl"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="60dp" />


        <Button
            android:id="@+id/popularPlayers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="66dp"
            android:background="@drawable/gradient_2"
            android:onClick="updateFirebase"
            android:text="View %age"
            android:textColor="#FFF" />





        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="125dp"
            android:layout_marginEnd="190dp"
            android:layout_marginRight="190dp"
            android:visibility="invisible" />


    </RelativeLayout>



</ScrollView>